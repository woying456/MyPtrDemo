<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.android.gmacs.view.NetworkImageView
        android:id="@+id/album_avatar"
        android:layout_width="@dimen/album_avatar_size"
        android:layout_height="@dimen/album_avatar_size"
        android:layout_marginBottom="@dimen/album_padding"
        android:layout_marginLeft="@dimen/album_padding"
        android:layout_marginTop="@dimen/album_padding"
        android:scaleType="centerCrop"
        app:drawShape="@string/drawShape" />

    <TextView
        android:id="@+id/album_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/album_padding"
        android:layout_marginRight="@dimen/album_padding"
        android:layout_marginTop="@dimen/album_padding"
        android:layout_toRightOf="@id/album_avatar"
        android:ellipsize="end"
        android:includeFontPadding="false"
        android:maxLines="1"
        android:singleLine="true"
        android:textColor="@color/album_name"
        android:textSize="@dimen/album_name" />

    <TextView
        android:id="@+id/album_timestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/album_name"
        android:layout_marginBottom="@dimen/album_padding"
        android:layout_marginLeft="@dimen/album_padding"
        android:layout_toRightOf="@id/album_avatar"
        android:includeFontPadding="false"
        android:textColor="@color/album_timestamp"
        android:textSize="@dimen/album_timestamp" />

    <include
        layout="@layout/wchat_album_list_item_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/album_timestamp"/>

</RelativeLayout>