<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/rl_location"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="@dimen/im_chat_msg_pic_msg_width"
                android:layout_height="@dimen/im_chat_msg_pic_msg_width">

    <ImageView
        android:id="@+id/iv_location"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/tv_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_location"
        android:ellipsize="end"
        android:gravity="center_vertical|left"
        android:maxLines="2"
        android:minHeight="54dp"
        android:paddingBottom="10dip"
        android:paddingLeft="22dip"
        android:paddingRight="10dip"
        android:paddingTop="10dip"
        android:textColor="@android:color/white"
        android:textSize="14dp" />

</RelativeLayout>