<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/group_add_title_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/title_bar_background">

    <ImageView
        android:id="@+id/title_bar_back1"
        style="@style/style_title_bar_back_btn"
        android:layout_centerVertical="true"
        android:onClick="onTitleClick"
        android:src="@drawable/gmacs_ic_back"
        android:visibility="gone" />

    <TextView
        android:id="@+id/title_bar_back2"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="-10dp"
        android:layout_toRightOf="@id/title_bar_back1"
        android:gravity="center"
        android:includeFontPadding="false"
        android:onClick="onTitleClick"
        android:text="返回"
        android:textColor="@color/white"
        android:textSize="15dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/title_bar_cancel"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="19.5dp"
        android:layout_toRightOf="@id/title_bar_back2"
        android:gravity="center"
        android:includeFontPadding="false"
        android:onClick="onTitleClick"
        android:text="取消"
        android:textColor="@color/white"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:includeFontPadding="false"
        android:text="选择联系人"
        android:textColor="@color/white"
        android:textSize="17dp" />

    <TextView
        android:id="@+id/title_bar_confirm"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:includeFontPadding="false"
        android:onClick="onTitleClick"
        android:paddingRight="13dp"
        android:text="确定"
        android:textColor="#00BDFD"
        android:textSize="15dp" />
</RelativeLayout>